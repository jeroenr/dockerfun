<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>

    <form style="search" name="SEARCH:DEVIATION" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <fieldsetref name="SEARCH_DEVIATION_PROPERTIES"/>
        <fieldsetref name="SEARCH_DEVIATION_LAYOUT"/>
        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_DEVIATION_SEARCH"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
    </form>
    <form style="search" name="EDIT_STORED_QUERY:DEVIATION" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <fieldsetref name="SEARCH_DEVIATION_PROPERTIES"/>
        <fieldsetref name="SEARCH_DEVIATION_LAYOUT"/>
        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_DEVIATION_SEARCH"/>
        <hidden name="key" value="form"/>

        <button name="eventSubmit_doView" label="BUTTON_SEARCH_PREVIEW"/>
        <button name="eventSubmit_doDelete" label="actionButtonDelete"/>
        <button name="eventSubmit_doCopycreate"/>
        <button name="eventSubmit_doSave" label="BUTTON_SEARCH_SAVE"/>
        <button name="eventSubmit_doCancel" label="actionButtonCancel"/>
    </form>
    <fieldset name="SEARCH_DEVIATION_PROPERTIES" showlegend="false">
        <hidden name="funcLevelOne" restricts="funcLevelTwo,funcLevelThree,tag"/>
        <hidden name="objectClassName" value="ibanx.logbook.DeviationIF"/>

        <select name="businessObjectType.number" operator="equals" label="businessObjectType.number">
            <source class="businessobjecttypelist" valuelistNameRef="ibanx.logbook.DeviationIF"/>
        </select>

        <select name="lifecycleState.name" operator="equals">
            <source class="lifecyclestatelist" valuelistNameRef="DEFAULT_DEVIATION_PROC" display="showprocessname"/>
        </select>

        <multiselect name="affectsFuncLevelOne">
            <source class="plantlist"/>
        </multiselect>

        <select name="subType" operator="equals">
            <source class="valuelist" valuelistNameRef="subType" display="description"/>
        </select>

        <checkbox name="flag_highlite"/>
    </fieldset>
    <fieldset name="SEARCH_DEVIATION_LAYOUT" showlegend="false">
        <layout values="deviation1,deviation2,deviation3" label="searchLayout"/>
        <pagesize/>
        <checkbox name="searchAdvancedSwitch" discloses="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE,ADVANCED_DEVIATION_SEARCH"/>
    </fieldset>

    <fieldset name="ADVANCED_DEVIATION_SEARCH" label="searchCriteria">
        <textfield name="number" cssClass="uppercase"/>

        <textfield name="title" label="deviationTitle"/>
        <textfield name="description" />

        <daterange name="effectiveFromDate" label="effectiveFromDate"/>
        <daterange name="effectiveTillDate" label="effectiveTillDate"/>

    </fieldset>

</forms>