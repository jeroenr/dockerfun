<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>

    <fieldset name="incidentClassificationPub" showlegend="false">
        <multiselect required="true" name="classification" width="wide">
            <source class="inline">
                <option value="FIRE"/>
                <option value="DAMAGE"/>
                <option value="HEALTH"/>
                <option value="SPILL"/>
            </source>
        </multiselect>
    </fieldset>


    <form name="INCIDENT:PUBLISH" generatetag="false">
        <hidden name="aggregateIdentifier"/>
        <hidden name="incidentIdentity"/>
        <hidden name="owner"/>
        <hidden name="number"/>
        <fieldsetref name="incidentLocation"/>
        <fieldsetref name="incidentClassificationPub"/>
        <!--<fieldsetref name="incidentClassification_incident"/>
        <fieldsetref name="incidentClassification_nearmiss"/>
        <fieldsetref name="incidentClassification_nonconformity"/>-->
        <fieldsetref name="incidentDetails"/>
        <fieldsetref name="incidentOrganisation"/>

        <date name="incidentDate"/>
        <date name="registrationDate"/>
        <date name="supplementDate"/>
        <date name="verifiedDate"/>
        <date name="investigatedDate"/>
        <date name="analyzedAndPlannedDate"/>
        <date name="activitiesExecutedDate"/>
        <date name="evaluatedAndClosedDate"/>
        <date name="rejectedDate"/>
        <date name="dismissDate"/>
        <hidden name="reporterId"/>

        <!-- for KPI reporting -->
        <suggest name="incidentConsequenceActual">
            <source class="valuelist" valuelistNameRef="consequence" display="description"/>
        </suggest>
        <suggest name="incidentConsequencePotential">
            <source class="valuelist" valuelistNameRef="consequence" display="description"/>
        </suggest>
        <multiselect name="reportTypeOfInjury">
            <source class="valuelist" valuelistNameRef="incident_injury_type" display="description"/>
        </multiselect>
        <multiselect name="reportKindOfInjury">
            <source class="valuelist" valuelistNameRef="incident_injuries" display="description"/>
        </multiselect>
        <multiselect name="reportLocationOfInjury">
            <source class="valuelist" valuelistNameRef="locationOfInjuries" display="description"/>
        </multiselect>
        <multiselect name="incidentAffectedLossType">
            <source class="valuelist" valuelistNameRef="incident_loss_type" display="description"/>
        </multiselect>
        <suggest name="incidentType">
            <source class="valuelist" valuelistNameRef="incident_type" display="description"/>
        </suggest>

        <multiselect name="reportAffectedParty">
            <source class="valuelist" valuelistNameRef="incident_affected_party" display="description" />
        </multiselect>
        <textfield name="recordableCount" maskref="number"/>
        <hidden name="recordable"/>
        <textfield name="lostTimeCount" maskref="number"/>
        <hidden name="lostTime"/>
        <hidden name="nonAttendance"/>
        <hidden name="rwcOrMtc"/>
        <hidden name="firstAid"/>
        <hidden name="nearMissUnwantedPeople"/>
        <hidden name="fatal"/>
        <hidden name="highPotential"/>

        <hidden name="title"/>
        <hidden name="description"/>
        <textfield name="incidentActualCosts" maskref="number"/>
        <textfield name="incidentPotentialCosts" maskref="number"/>

        <suggest name="basicCause" required="true">
            <source class="valuelist" valuelistNameRef="incident_major_basic_cause" display="description" />
        </suggest>

        <select name="incidentMinorCauseBasicCause">
            <source class="valuelist" valuelistNameRef="incident_minor_basic_cause" />
        </select>

        <fieldsetref name="GENERIC_INCIDENT:WHITELISTING"/>
    </form>

    <form name="INCIDENT_ACTIVITY:PUBLISH" generatetag="false">
        <hidden name="aggregateIdentifier"/>
        <hidden name="incidentNumber"/>
        <hidden name="number"/>
        <fieldsetref name="activity"/>
        <fieldsetref name="activity_add"/>
        <fieldsetref name="completeIncidentActivity"/>
        <fieldsetref name="GENERIC_INCIDENT:WHITELISTING"/>
    </form>

</forms>

