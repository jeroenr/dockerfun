<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>
    <form name="USER:VIEW" mode="view">
        <hidden name="loginName" persist="false"/>
        <fieldsetref name="USER:EDIT:NAME"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:1"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:2"/>
    </form>

    <form name="ADMIN:USER:EDIT">
        <hidden name="isAdmin" value="true" persist="false"/>
        <fieldsetref name="USER:EDIT:NAME" mode="edit"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:1" mode="edit"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:2" mode="edit"/>
        <whitelist names="objectKey eventSubmit_do.* formName"/>
    </form>

    <form name="ADMIN:USER:CREATE">
        <fieldsetref name="USER:CREATE:NAME" mode="edit"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:1" mode="edit"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:2" mode="edit"/>

        <whitelist names="objectKey eventSubmit_do.* objectClassName"/>
    </form>

    <form name="USER:EDIT">
        <fieldsetref name="USER:EDIT:NAME" mode="view"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:1" mode="edit"/>
        <fieldsetref name="USER:EDIT:PROPERTIES:2" mode="view"/>
        <whitelist names="objectKey eventSubmit_do.* formName"/>
    </form>

    <fieldset name="USER:CREATE:NAME" label="SECTION-PROPERTIES">
        <hidden name="key" value="form" persist="false"/>
        <textfield name="loginName" required="true" minLength="3"/>
        <space name="name"/>
        <textfield name="firstName" required="true"/>
        <space name="name"/>
        <textfield name="lastName" required="true"/>
        <space name="name"/>
    </fieldset>

    <fieldset name="USER:EDIT:NAME" label="SECTION-PROPERTIES">
        <hidden name="key" value="form" persist="false"/>
        <textfield name="loginName" mode="view" width="wide"/>
        <textfield name="firstName" width="wide"/>
        <textfield name="lastName" width="wide"/>
    </fieldset>

    <fieldset name="USER:EDIT:PROPERTIES:1" showlegend="false">
        <textfield name="email"/>
        <space name="name"/>
        <textfield name="phone"/>
        <space name="name"/>
        <textfield name="company"/>
        <space name="name"/>
    </fieldset>

    <fieldset name="USER:EDIT:PROPERTIES:2" showlegend="false">
        <select name="lifecycleStateName" required="true" label="lifecycleState.name">
            <source class="lifecyclestatelist" valuelistNameRef="USER_STATE"/>
        </select>
        <space name="name"/>
        <select type="radio" name="accessToConfidentialInformation">
            <source class="valuelist" valuelistNameRef="boolean" display="description"/>
        </select>
        <space name="name"/>
        <multiselect name="skills" label="userSkills" width="wide">
            <source class="valuelist" valuelistNameRef="userSkills" display="description"/>
        </multiselect>
        <multiselect name="department" label="department" width="wide">
            <source class="valuelist" valuelistNameRef="departmentUser" display="description"/>
        </multiselect>
        <multiselect name="enabledProducts" label="enabledProducts" width="wide" type="checkbox">
            <source class="productlist" display="description"/>
        </multiselect>
    </fieldset>

    <form name="USER:CHANGE:PASSWORD:FIRSTLOGIN">
        <staticlabel name="changePasswordOnFirstLogin"/>
        <space name="name"/>
        <staticlabel name="passwordShoudlMatchText"/>
        <space name="name"/>
        <staticlabel name="valueDoesNotMatchRegex.password"/>
        <fieldsetref name="PASSWORD:EDIT:FIELDSET"/>
        <button type="submit" name="eventSubmit_doCommitpassword" label="actionButtonSave"/>
        <button type="submit" name="eventSubmit_doLogout" label="toLoginScreen"/>
        <whitelist names="objectKey"/>
    </form>

    <form name="ADMIN:PASSWORD:EDIT">
        <staticlabel name="passwordShoudlMatchText"/>
        <space name="name"/>
        <staticlabel name="valueDoesNotMatchRegex.password"/>
        <hidden name="loginName" persist="false"/>
        <fieldsetref name="ADMIN:PASSWORD:EDIT:FIELDSET"/>
        <button type="submit" name="eventSubmit_doCommitpassword" label="actionButtonSave"/>
        <button type="submit" name="eventSubmit_doCancel" label="cancel"/>
        <whitelist names="objectKey"/>
    </form>

    <form name="PASSWORD:EDIT">
        <staticlabel name="passwordShoudlMatchText"/>
        <space name="name"/>
        <staticlabel name="valueDoesNotMatchRegex.password"/>
        <fieldsetref name="PASSWORD:EDIT:FIELDSET"/>
        <button type="submit" name="eventSubmit_doCommitpassword" label="actionButtonSave"/>
        <button type="submit" name="eventSubmit_doCancel" label="cancel"/>
        <whitelist names="objectKey"/>
    </form>

    <fieldset name="PASSWORD:EDIT:FIELDSET" label="SECTION-PROPERTIES">
        <hidden name="key" value="form" persist="false"/>
        <password name="cpw" label="passwordCurrent" required="true"/>
        <space name="name"/>
        <password name="pw" label="password" required="true" validate="false"/>
        <space name="name"/>
        <password name="pw_check" label="passwordConfirm" required="true" validate="false"/>
    </fieldset>

    <fieldset name="ADMIN:PASSWORD:EDIT:FIELDSET" label="SECTION-PROPERTIES">
        <hidden name="key" value="form" persist="false"/>
        <hidden name="isAdmin" value="true" persist="false"/>
        <password name="pw" label="password" required="true" validate="false"/>
        <space name="name"/>
        <password name="pw_check" label="passwordConfirm" required="true" validate="false"/>
    </fieldset>
</forms>
