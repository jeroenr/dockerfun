<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>
    <fieldset name="SIMPLE_LOGEVENT:SECTION:DETAILS">
        <textarea name="title" maxLength="1000" required="true" width="wide" label="logeventTitle"/>
        <multiselect name="category">
            <source class="valuelist" valuelistNameRef="eventCategory" display="description"/>
        </multiselect>
        <datetime name="eventDate" required="true" value="now"/>
        <textfield name="reporter"/>
        <textarea name="takenActions" maxLength="250" width="wide"/>
    </fieldset>

    <fieldset name="SIMPLE_LOGEVENT:SECTION:FOLLOWUP">
        <followupheader name="followupheader"/>
        <followup name="MISC" width="wide"/>
        <followup name="IMPROVEMENT" width="wide"/>
        <followup name="WA" width="wide"/>
        <!-- <followup name="REQUEST_FOR_WORK" discloses="SIMPLE_LOGEVENT_SECTION_REQUEST_FOR_WORK" width="wide"/>  -->
        <!--<incidentfollowup name="REPORT_INCIDENT" width="wide"/>-->
    </fieldset>
    <fieldset name="SIMPLE_LOGEVENT:SECTION:FOLLOWUP:VIEW">
        <followup name="MISC" width="wide"/>
        <followup name="IMPROVEMENT" width="wide"/>
        <followup name="WA" width="wide"/>
        <!-- <followup name="REQUEST_FOR_WORK" discloses="SIMPLE_LOGEVENT_SECTION_REQUEST_FOR_WORK" width="wide"/>  -->
        <!--<incidentfollowup name="REPORT_INCIDENT" width="wide"/>-->
    </fieldset>

    <fieldset name="SIMPLE_LOGEVENT_SECTION_REQUEST_FOR_WORK" showlegend="false">
        <!-- <checkbox name="x" required="true"/>  -->
    </fieldset>

    <fieldset name="SIMPLE_LOGEVENT:SECTION:MISCELLANEOUS">
        <select type="radio" name="downtime">
            <source class="valuelist" valuelistNameRef="downtimeType" display="description"/>
        </select>
        <textfield name="downtime_text" maxLength="10"/>
        <!-- ELECOAT : breaks best practice functionality like raising a deviation and creating a logevent based on that also
                       legacy data is not supported
        <datetimerange name="downtime_text" withdelta="true"/>
        -->

        <select type="radio" name="productionLoss">
            <source class="valuelist" valuelistNameRef="productionLossType" display="description" order="ordering"/>
        </select>

        <textfield name="productionLoss_text" maxLength="200"/>
        <textarea name="description" maxLength="1000" width="wide"/>
        <document qualifier="logEvent"/>
    </fieldset>

    <form name="SIMPLE_LOGEVENT:EDIT">
        <hidden name="businessObjectType" restricts="category"/>
        <fieldsetref name="GENERIC:SECTION:PBS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:DETAILS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:FOLLOWUP"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:MISCELLANEOUS"/>
        <fieldsetref name="SIMPLE_LOGEVENT_SECTION_REQUEST_FOR_WORK"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>
    <form name="SIMPLE_LOGEVENT:EDIT:CONSOLIDATED">
        <hidden name="businessObjectType" restricts="category"/>
        <fieldsetref name="GENERIC:SECTION:PBS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:DETAILS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:FOLLOWUP:VIEW" mode="view"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:MISCELLANEOUS"/>
        <fieldsetref name="SIMPLE_LOGEVENT_SECTION_REQUEST_FOR_WORK" mode="view"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>

    <form name="SIMPLE_LOGEVENT:EDITFOLLOWUP" mode="edit">
        <fieldsetref name="GENERIC:SECTION:PBS" mode="view"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:DETAILS" mode="view"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:FOLLOWUP"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:MISCELLANEOUS" mode="view"/>
        <fieldsetref name="SIMPLE_LOGEVENT_SECTION_REQUEST_FOR_WORK"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>

    <form name="SIMPLE_LOGEVENT:VIEW:1" mode="view">
        <fieldsetref name="GENERIC:SECTION:PBS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:DETAILS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:FOLLOWUP:VIEW"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:MISCELLANEOUS"/>
        <fieldsetref name="SIMPLE_LOGEVENT_SECTION_REQUEST_FOR_WORK"/>
    </form>
    <form name="SIMPLE_LOGEVENT:PRINT" mode="view">
        <fieldsetref name="GENERIC:SECTION:PBS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:DETAILS"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:FOLLOWUP:VIEW"/>
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:MISCELLANEOUS"/>
    </form>
    <form name="SIMPLE_LOGEVENT:CONFIRM" mode="view">
        <fieldsetref name="SIMPLE_LOGEVENT:SECTION:DETAILS"/>
    </form>

    <!-- DETAIL_LOGEVENT -->
    <fieldset name="DETAIL_LOGEVENT:SECTION:DETAILS">
        <multiselect name="category">
            <source class="valuelist" valuelistNameRef="eventCategory" display="description"/>
        </multiselect>
        <space name="space"/>
        <datetime name="eventDate" required="true" value="now"/>
        <space name="space"/>
        <textarea name="title" maxLength="1000" required="true"/>
    </fieldset>
    <form name="DETAIL_LOGEVENT:EDIT:CONSOLIDATED">
        <hidden name="businessObjectType" restricts="category"/>
        <hidden name="funcLevelOne"/>
        <fieldsetref name="DETAIL_LOGEVENT:SECTION:DETAILS"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>

    <form name="DETAIL_LOGEVENT:EDIT">
        <hidden name="businessObjectType" restricts="category"/>
        <hidden name="funcLevelOne"/>
        <fieldsetref name="DETAIL_LOGEVENT:SECTION:DETAILS"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>
    <form name="DETAIL_LOGEVENT:VIEW:1" mode="view">
        <fieldsetref name="DETAIL_LOGEVENT:SECTION:DETAILS"/>
    </form>
    <form name="DETAIL_LOGEVENT:PRINT" mode="view">
        <fieldsetref name="DETAIL_LOGEVENT:SECTION:DETAILS"/>
    </form>

    <form name="DETAIL_LOGEVENT:CONFIRM" mode="view">
        <fieldsetref name="DETAIL_LOGEVENT:SECTION:DETAILS"/>
    </form>

    <fieldset name="LOGEVENT_CREATE_ON_STATE_CHANGE" label="actionConfirmTaskTitleCreateLogEvent">
        <hidden name="boType" value="SIMPLE_LOGEVENT" persist="false"/>
        <hidden name="logeventShiftObjectKey" restricts="logEventLogObjectKey" persist="false"/>
        <textfield name="dummylogeventShiftObjectKey" label="shift" cssClass="shiftPicker" persist="false"/>

        <suggest name="logEventLogObjectKey" required="true" minLength="0" freeText="false" label="logObjectKey" persist="false">
            <source class="loglist"/>
        </suggest>

        <textarea name="logevent.title" maxLength="1000" required="true" width="wide" label="title" persist="false"/>
        <multiselect name="logevent.category" label="category" persist="false">
            <source class="valuelist" valuelistNameRef="eventCategory" display="description"/>
        </multiselect>
        <datetime name="logevent.eventDate" required="true" value="now" label="eventDate" persist="false"/>
    </fieldset>


</forms>
