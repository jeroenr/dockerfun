<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>
    <form style="search" name="FILTER:INCIDENT" generatetag="false">
        <textfield name="title" label="incidentTitle2" />
        <textfield name="description" label="incidentDescription" />
        <textfield name="incidentPreliminaryDescription" />
        <multiselect name="state" operator="equals" label="status">
            <source class="valuelist" valuelistNameRef="incident_state"/>
        </multiselect>
        <fieldsetref name="GENERIC:FILTER:INCIDENT:DETAILS"/>
        <fieldsetref name="GENERIC:FILTER:SECTION:PBS:INCIDENT"/>
        <fieldsetref name="GENERIC:FILTER:INCIDENT:LAYOUT" />
        <fieldsetref name="GENERIC:WHITELISTING:SEARCH" />
    </form>

    <fieldset name="GENERIC:FILTER:INCIDENT:DETAILS" showlegend="false">
        <textfield name="number" />
        <multiselect name="incidentType" type="checkbox">
            <source class="inline" order="ordering" translationPattern="incidentType.%s">
                <option value="UNWANTED_SITUATION"/>
                <option value="NEAR_MISS"/>
                <option value="LOSS"/>
            </source>
        </multiselect>
        <daterange name="incidentDate" />
        <daterange name="registrationDate" />
    </fieldset>

    <form style="search" name="FILTER:INCIDENT:STATS" generatetag="false">
        <fieldsetref name="GENERIC:FILTER:SECTION:PBS:INCIDENT"/>
        <fieldsetref name="GENERIC:FILTER:INCIDENT:STATS:DETAILS"/>
        <fieldsetref name="GENERIC:FILTER:INCIDENT:LAYOUT" />
        <fieldsetref name="GENERIC:WHITELISTING:SEARCH" />
    </form>

    <fieldset name="GENERIC:FILTER:INCIDENT:STATS:DETAILS" showlegend="false">
        <daterange name="incidentDate" />
        <daterange name="registrationDate" />
    </fieldset>

    <fieldset name="GENERIC:FILTER:INCIDENT:LAYOUT" showlegend="false">
        <layout values="INC1,INC2EXCEL,INCSTATS" label="searchLayout"/>
        <pagesize/>
    </fieldset>

    <fieldset name="GENERIC:FILTER:SECTION:PBS:INCIDENT" showlegend="false">
        <suggest name="funcLevelOne" minLength="0" operator="equals" restricts="funcLevelTwo,funcLevelThree,tag">
            <source class="plantlist" display="value,description"/>
        </suggest>
        <suggest name="funcLevelTwo" minLength="0" restricts="funcLevelThree,tag">
            <source class="valuelist" valuelistNameRef="funcLevelTwo" display="value,description"/>
        </suggest>
        <suggest name="funcLevelThree" minLength="0" restricts="tag">
            <source class="valuelist" valuelistNameRef="funcLevelThree" display="value,description"/>
        </suggest>
        <suggest name="tag" minLength="0">
            <source class="valuelist" valuelistNameRef="tag" display="value,description"/>
        </suggest>

        <suggest name="orgLevelOne" minLength="0" restricts="orgLevelTwo,orgLevelThree,orgLevelFour">
            <source class="plantlist" display="description"/>
        </suggest>
        <suggest name="orgLevelTwo" minLength="0" restricts="orgLevelThree,orgLevelFour">
            <source class="valuelist" valuelistNameRef="icqOrgLevelTwo" display="description"/>
        </suggest>
        <suggest name="orgLevelThree" minLength="0" restricts="orgLevelFour">
            <source class="valuelist" valuelistNameRef="icqOrgLevelThree" display="description"/>
        </suggest>
        <suggest name="orgLevelFour" minLength="0">
            <source class="valuelist" valuelistNameRef="icqOrgLevelFour" display="description"/>
        </suggest>
    </fieldset>
</forms>