<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>

    <form style="search" name="SEARCH:CHANGEREQUEST" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>

        <fieldsetref name="SEARCH_CHANGEREQUEST_PROPERTIES"/>
        <fieldsetref name="SEARCH_CHANGEREQUEST_LAYOUT"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_CHANGEREQUEST_SEARCH"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
        <button type="reset" name="resetScreen" label="actionButtonEmptyForm"/>
    </form>

    <form style="search" name="EDIT_STORED_QUERY:CHANGEREQUEST" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>

        <fieldsetref name="SEARCH_CHANGEREQUEST_PROPERTIES"/>
        <fieldsetref name="SEARCH_CHANGEREQUEST_LAYOUT"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_CHANGEREQUEST_SEARCH"/>
        <hidden name="key" value="form"/>

        <button name="eventSubmit_doView" label="BUTTON_SEARCH_PREVIEW"/>
        <button name="eventSubmit_doDelete" label="actionButtonDelete"/>
        <button name="eventSubmit_doCopycreate"/>
        <button name="eventSubmit_doSave" label="BUTTON_SEARCH_SAVE"/>
        <button name="eventSubmit_doCancel" label="actionButtonCancel"/>
    </form>

    <fieldset name="SEARCH_CHANGEREQUEST_PROPERTIES" showlegend="false">
        <hidden name="funcLevelOne" restricts="funcLevelTwo,funcLevelThree,tag"/>
        <hidden name="objectClassName" value="ibanx.moc.ChangeRequestIF"/>

        <textfield name="title" operator="equals"/>

        <suggest name="createdBy" operator="equals">
            <source class="userlist"/>
        </suggest>

    </fieldset>

    <fieldset name="SEARCH_CHANGEREQUEST_LAYOUT" showlegend="false">
        <layout values="CHANGEBUDGET,CRR2,CRR1" label="searchLayout"/>
        <pagesize value="50"/>
        <checkbox name="searchAdvancedSwitch" discloses="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE,ADVANCED_CHANGEREQUEST_SEARCH"/>
    </fieldset>

    <fieldset name="ADVANCED_CHANGEREQUEST_SEARCH" label="searchCriteria">

        <textfield name="number" cssClass="uppercase" operator="contains"/>

        <multiselect name="lifecycleState.name" operator="match" type="list">
            <source class="lifecyclestatelist" valuelistNameRef="CHANGE_PROCESS" display="showphase"/>
        </multiselect>

        <suggest name="owner" operator="freetext">
            <source class="userlist"/>
        </suggest>

        <multiselect name="emergencyByPass" label="empty">
            <source class="inline" translationPattern="mocduration.%s">
                <option value="EMERGENCY"/>
            </source>
        </multiselect>

    </fieldset>

</forms>