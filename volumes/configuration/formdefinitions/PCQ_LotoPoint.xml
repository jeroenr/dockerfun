<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>
    <fieldset name="ISOLATION_POINT:OVERVIEW" label="LABEL_SECTION_PROPERTIES">
        <select name="discipline">
            <source class="valuelist" valuelistNameRef="lotoDiscipline" display="description"/>
        </select>
        <suggest name="funcLevelTwo" minLength="0" maxLength="50" cssClass="uppercase" restricts="funcLevelThree,tag">
            <source class="valuelist" valuelistNameRef="funcLevelTwo" display="value,description"/>
        </suggest>
        <textfield name="isolationState"/>
        <suggest name="funcLevelThree" minLength="0" maxLength="50" cssClass="uppercase" restricts="tag">
            <source class="valuelist" valuelistNameRef="funcLevelThree" display="value,description"/>
        </suggest>
        <suggest name="tag" minLength="0" freeText="true" cssClass="uppercase" maxLength="50">
            <source class="valuelist" valuelistNameRef="tag" display="value,description"/>
        </suggest>
        <textfield name="pointNumber"/>
        <checkbox name="tryOut"/>
    </fieldset>

    <fieldset name="ISOLATION_POINT_HIDDEN" showlegend="false">
        <hidden name="orgContext"/>
        <hidden name="standard"/>
        <hidden name="PLACESPADE" value="REMOVESPADE"/>
        <hidden name="LOCK" value="LOCK"/>
    </fieldset>

    <fieldset name="ISOLATION_POINT_DISCIPLINE" showlegend="false">
        <select name="discipline" required="true">
            <source class="valuelist" valuelistNameRef="lotoDiscipline" display="description"/>
        </select>
    </fieldset>

    <fieldset name="ISOLATION_POINT_POINTNR" label="LABEL_SECTION_PROPERTIES">
        <textfield name="pointNumber" cssClass="uppercase" required="true" maxLength="21"/>
    </fieldset>
    <fieldset name="ISOLATION_POINT_SETTINGS" showlegend="false">
        <textarea name="name" width="wide" required="true" maxLength="250" label="lotoPointName" />
        <textfield name="energyTypeMagnitude" cssClass="uppercase" required="false" maxLength="25"/>
        <select name="subType" required="true">
            <source class="valuelist" valuelistNameRef="lotoSubType" display="description"/>
        </select>
        <select name="operationalState">
            <source class="valuelist" valuelistNameRef="operationalState" display="description"/>
        </select>
        <select name="isolatedState" required="true">
            <source class="valuelist" valuelistNameRef="isolatedState" display="description"/>
        </select>
        <select name="lotoMethod" required="true">
            <source class="valuelist" valuelistNameRef="lotoIsolationMethod" display="description"/>
        </select>
        <select name="unLotoMethod" required="true">
            <source class="valuelist" valuelistNameRef="lotoDeIsolationMethod" display="description"/>
        </select>
        <checkbox name="tryOut"/>
    </fieldset>

    <fieldset name="EI_ISOLATION_POINT_DETAILS" label="details">
        <checkbox name="insulationPresent"/>
        <space name="space"/>
        <checkbox name="tracingPresent"/>
        <space name="space"/>
        <checkbox name="scaffoldingReq"/>
        <space name="space"/>
        <textfield name="timeNeeded"/>
        <space name="space"/>
    </fieldset>


    <fieldset name="MECHANICAL_ISOLATION_POINT_DETAILS" label="details">
        <checkbox name="insulationPresent"/>
        <space name="space"/>
        <checkbox name="tracingPresent"/>
        <space name="space"/>
        <checkbox name="scaffoldingReq"/>
        <space name="space"/>
        <select name="gasketType">
            <source class="valuelist" valuelistNameRef="lotoGasketType" display="description"/>
        </select>
        <select name="diameter">
            <source class="valuelist" valuelistNameRef="lotoDiameter" display="description"/>
        </select>
        <select name="pressureClass">
            <source class="valuelist" valuelistNameRef="lotoPressureClass" display="description"/>
        </select>
    </fieldset>

