    <fieldset name="FILTER:ISOLATIONPOINT:BASIC" label="searchCriteria" showlegend="false">
        <multiselect type="checkbox" name="businessObjectType.number" operator="equals" label="businessObjectType.number" width="wide">
            <source class="businessobjecttypelist" valuelistNameRef="ibanx.loto.IsolationPointIF"/>
        </multiselect>
        <select name="subType" operator="equals">
            <source class="valuelist" valuelistNameRef="category" filter="all"/>
        </select>
        <hidden name="funcLevelOne" restricts="funcLevelTwo,funcLevelThree,tag"/>
        <suggest name="funcLevelTwo" minLength="0" maxLength="50" cssClass="uppercase" restricts="funcLevelThree,tag">
