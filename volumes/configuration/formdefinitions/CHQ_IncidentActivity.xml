<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>
    <form name="incident.ViewIncidentActivity" mode="view">
        <fieldsetref name="activity"/>
        <fieldsetref name="GENERIC_INCIDENT:WHITELISTING"/>
    </form>

    <form name="incident.ViewIncidentActivity.COMPLETED" mode="view">
        <fieldsetref name="activityCompleted"/>
        <fieldsetref name="GENERIC_INCIDENT:WHITELISTING"/>
    </form>

    <form name="incident.EditIncidentActivity">
        <hidden name="aggregateIdentifier"/>
        <hidden name="number"/>
        <fieldsetref name="activity"/>
        <fieldsetref name="GENERIC_INCIDENT:WHITELISTING"/>

        <button type="submit" name="eventSubmit_doCancel"/>
        <button type="submit" name="eventSubmit_doModify_activity"/>
    </form>

    <form name="incident.CompleteIncidentActivity">
        <hidden name="aggregateIdentifier"/>
        <hidden name="number"/>
        <hidden name="statisticOne" value="100" emptyOnReload="true"/>
        <fieldsetref name="completeIncidentActivity"/>
        <fieldsetref name="GENERIC_INCIDENT:WHITELISTING"/>

        <button type="submit" name="eventSubmit_doCancel"/>
        <button type="submit" name="eventSubmit_doComplete_incident_activity"/>
    </form>

    <form name="incident.AddActivity">
        <hidden name="aggregateIdentifier"/>
        <hidden name="incidentNumber"/>
        <fieldsetref name="activity_add"/>
        <fieldsetref name="activity_assignee"/>
        <fieldsetref name="GENERIC_INCIDENT:WHITELISTING"/>
        <button type="submit" name="eventSubmit_doAdd_activity_to_incident"/>
    </form>

    <fieldset name="activity_add" showlegend="false">
        <textfield name="title" maxLength="1000" required="true" width="wide"/>
        <date name="startDate" required="true"/>
        <date name="dueDate" required="true"/>
        <select type="radio" name="immediate" required="true">
            <source class="valuelist" valuelistNameRef="boolean" display="description" />
        </select>
        <textarea name="description" maxLength="1000" width="wide"/>
    </fieldset>
    <fieldset name="activity_assignee">
        <suggest name="assignee" minLength="0">
            <source class="userlist"/>
        </suggest>
    </fieldset>

    <fieldset name="activity" showlegend="false">
        <textfield name="title" maxLength="1000" required="true"/>
        <suggest name="assignee" minLength="0">
            <source class="userlist"/>
        </suggest>
        <date name="startDate" required="true"/>
        <date name="dueDate"/>
        <textfield name="statisticOne" maxLength="2" value="0" maskref="number" label="activityStatisticOne" required="true"/>
        <textarea name="description" maxLength="1000" width="wide"/>
    </fieldset>

    <fieldset name="activityCompleted" showlegend="false">
        <textfield name="title" maxLength="1000" required="true"/>
        <suggest name="assignee" minLength="0">
            <source class="userlist"/>
        </suggest>
        <date name="startDate" mode="view"/>
        <date name="dueDate"/>
        <textfield name="statisticOne" maxLength="2" value="0" maskref="number" label="activityStatisticOne" required="true"/>
        <textarea name="description" maxLength="1000" width="wide"/>
        <textarea name="completedComment" maxLength="1000" width="wide" required="true"/>
        <document qualifier="incidentActivity"/>
    </fieldset>

    <fieldset name="completeIncidentActivity" showlegend="false">
        <textfield name="title" mode="view"/>
        <date name="dueDate" mode="view"/>

        <textarea name="completedComment" maxLength="1000" width="wide" required="true" label="evidence"/>
        <document qualifier="incidentActivity" removable="false"/>
    </fieldset>

    <form name="incident.ViewIncidentSummary" mode="view">
        <fieldsetref name="view:incident" />
    </form>

</forms>