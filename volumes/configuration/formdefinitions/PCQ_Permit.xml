    <fieldset name="GENERIC_PERMIT:SECTION:DIRECT_PRINTING" label="PRINT">
        <select name="issuePoint" label="LABEL_PLANNING_ISSUE_POINT">
            <source class="valuelist" valuelistNameRef="issuePoint" display="description"/>
        </select>
    </fieldset>
