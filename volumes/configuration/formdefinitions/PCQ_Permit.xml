    <fieldset name="GENERIC_PERMIT:SECTION:GAS_MEASURES" label="SECTION-GAS-MEASUREMENTS">
        <staticlabel name="oxygen" width="wide"/>
        <selectwithcheckbox name="gmZuurstof" label="required">
            <source class="valuelist" valuelistNameRef="frequency" display="description"/>
        </selectwithcheckbox>

        <staticlabel name="explosiviteit" width="wide"/>
        <selectwithcheckbox name="gmExplosiviteit" label="required">
            <source class="valuelist" valuelistNameRef="frequency" display="description"/>
        </selectwithcheckbox>

        <staticlabel name="toxic" width="wide"/>
        <selectwithcheckbox name="gmToxisch" label="required">
            <source class="valuelist" valuelistNameRef="frequency" display="description"/>
        </selectwithcheckbox>
        <space name="name"/>
        <textfield name="gmToxischStof" label="substance"/>
        <space name="name"/>
        <textfield name="gmToxischMAC" label="mac"/>
