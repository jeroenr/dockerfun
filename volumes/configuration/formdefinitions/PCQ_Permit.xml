    <fieldset name="GENERIC_PERMIT:SECTION:GAS_MEASURES:AUDIT" label="SECTION-GAS-MEASUREMENTS">
        <checkbox name="gmZuurstofRequired"/>
        <checkbox name="gmExplosiviteitRequired"/>
        <checkbox name="gmToxischRequired"/>
        <textfield name="gmToxischStof"/>
        <textfield name="gmToxischMAC"/>
    </fieldset>

