<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>

    <form style="search" name="SEARCH:CHANGEACTIVITY" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>

        <fieldsetref name="SEARCH_CHANGEACTIVITY_PROPERTIES"/>
        <fieldsetref name="SEARCH_CHANGEACTIVITY_LAYOUT"/>

        <fieldsetref name="ADVANCED_CHANGEACTIVITY_SEARCH"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
        <button type="reset" name="resetScreen" label="actionButtonEmptyForm"/>
    </form>

    <form style="search" name="EDIT_STORED_QUERY:CHANGEACTIVITY" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>

        <fieldsetref name="SEARCH_CHANGEACTIVITY_PROPERTIES"/>
        <fieldsetref name="SEARCH_CHANGEACTIVITY_LAYOUT"/>

        <fieldsetref name="ADVANCED_CHANGEACTIVITY_SEARCH"/>
        <hidden name="key" value="form"/>

        <button name="eventSubmit_doView" label="BUTTON_SEARCH_PREVIEW"/>
        <button name="eventSubmit_doDelete" label="actionButtonDelete"/>
        <button name="eventSubmit_doCopycreate"/>
        <button name="eventSubmit_doSave" label="BUTTON_SEARCH_SAVE"/>
        <button name="eventSubmit_doCancel" label="actionButtonCancel"/>
    </form>

    <fieldset name="SEARCH_CHANGEACTIVITY_LAYOUT" showlegend="false">
        <layout values="CAR1,changeactivity" label="searchLayout"/>
        <pagesize value="50"/>
        <checkbox name="searchAdvancedSwitch" discloses="ADVANCED_CHANGEACTIVITY_SEARCH"/>
    </fieldset>

    <fieldset name="SEARCH_CHANGEACTIVITY_PROPERTIES" showlegend="false">
        <hidden name="objectClassName" value="ibanx.moc.ChangeActivityIF"/>
        <hidden name="isTemplate"/>

        <textfield name="title" operator="contains"/>

        <suggest name="assignee" operator="equals">
            <source class="userlist"/>
        </suggest>
    </fieldset>

    <fieldset name="ADVANCED_CHANGEACTIVITY_SEARCH" label="searchCriteria">

        <suggest name="createdBy" operator="freetext">
            <source class="userlist"/>
        </suggest>

        <multiselect name="lifecycleState.name" operator="match" type="list">
            <source class="lifecyclestatelist" valuelistNameRef="DEFAULT_CA_PROCESS" display="showprocessname"/>
        </multiselect>

        <daterange name="startDate"/>
        <daterange name="dueDate"/>
    </fieldset>

</forms>