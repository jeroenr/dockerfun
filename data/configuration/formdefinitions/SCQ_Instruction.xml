<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>

    <fieldset name="INSTRUCTION:SECTION:INSTRUCTION" label="INSTRUCTION:SECTION:INSTRUCTION">
        <multiselect name="category">
            <source class="valuelist" valuelistNameRef="instrCategory" display="description"/>
        </multiselect>
        <textfield name="lockedBy"/>
        <datetime name="effectiveFromDate"/>
        <datetime name="effectiveTillDate" />
        <textarea name="title" maxLength="1000" required="true" width="wide" label="instructionTitle"/>
    </fieldset>
    <fieldset name="INSTRUCTION:SECTION:INSTRUCTION:EDIT" label="INSTRUCTION:SECTION:INSTRUCTION">
        <multiselect name="category">
            <source class="valuelist" valuelistNameRef="instrCategory" display="description"/>
        </multiselect>
        <textfield name="lockedBy"/>
        <datetime name="effectiveFromDate" value="now" required="true"/>
        <datetime name="effectiveTillDate" />
        <textarea name="title" maxLength="1000" required="true" width="wide" label="instructionTitle"/>
    </fieldset>

    <fieldset name="INSTRUCTION:SECTION:MISCELLANEOUS">
        <multiselect name="affectsFuncLevelOne">
            <source class="plantlist"/>
        </multiselect>
        <textarea name="description" maxLength="1000" width="wide"/>

        <document qualifier="Instruction"/>
    </fieldset>

    <form name="DEFAULT_INSTRUCTION:EDIT:RAISE">
        <staticlabel name="confirmMessage.raise"/>

        <hidden name="key" value="form" persist="false"/>
        <hidden name="confirm" value="false" persist="false"/>

        <fieldsetref name="INSTRUCTION:SECTION:RAISE"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>
    <form name="DEFAULT_INSTRUCTION:EDIT:ACTIVATE">
        <staticlabel name="confirmMessage.activate"/>

        <hidden name="key" value="form" persist="false"/>
        <hidden name="confirm" value="false" persist="false"/>

        <fieldsetref name="INSTRUCTION:SECTION:ACTIVATE"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>
    <form name="DEFAULT_INSTRUCTION:EDIT:CANCEL">
        <staticlabel name="confirmMessage.cancel"/>

        <hidden name="key" value="form" persist="false"/>
        <hidden name="confirm" value="false" persist="false"/>

        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>


    <fieldset name="INSTRUCTION:SECTION:RAISE" label="INSTRUCTION:SECTION:INSTRUCTION">
        <datetime name="effectiveTillDate" value="now" required="true"/>
        <suggest name="unLockedBy" minLength="0" required="true">
            <source class="userlist" display="value=currentuser"/>
        </suggest>
    </fieldset>
    <fieldset name="INSTRUCTION:SECTION:ACTIVATE" label="INSTRUCTION:SECTION:INSTRUCTION">
        <datetime name="effectiveFromDate" required="true"/>
        <datetime name="effectiveTillDate"/>
    </fieldset>

    <form name="DEFAULT_INSTRUCTION:EDIT">
        <fieldsetref name="GENERIC:SECTION:PBS"/>
        <fieldsetref name="INSTRUCTION:SECTION:INSTRUCTION:EDIT"/>
        <fieldsetref name="INSTRUCTION:SECTION:MISCELLANEOUS"/>
        <fieldsetref name="GENERIC:SCQ:WHITELISTING"/>
    </form>
    <form name="DEFAULT_INSTRUCTION:VIEW:1" mode="view">
        <fieldsetref name="GENERIC:SECTION:PBS"/>
        <fieldsetref name="INSTRUCTION:SECTION:INSTRUCTION"/>
        <fieldsetref name="INSTRUCTION:SECTION:MISCELLANEOUS"/>
    </form>
    <form name="DEFAULT_INSTRUCTION:PRINT" mode="view">
        <fieldsetref name="GENERIC:SECTION:PBS"/>
        <fieldsetref name="INSTRUCTION:SECTION:INSTRUCTION"/>
        <fieldsetref name="INSTRUCTION:SECTION:MISCELLANEOUS"/>
    </form>

</forms>