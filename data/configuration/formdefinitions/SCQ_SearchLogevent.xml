<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>

    <form style="search" name="SEARCH:LOGEVENT" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <fieldsetref name="SEARCH_LOGEVENT_PROPERTIES"/>
        <fieldsetref name="SEARCH_LOGEVENT_LAYOUT"/>
        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_LOGEVENT_SEARCH"/>
        <fieldsetref name="ADVANCED_LOGEVENT_SEARCH_FOLLOWUP"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
    </form>

    <form style="search" name="EDIT_STORED_QUERY:LOGEVENT" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <fieldsetref name="SEARCH_LOGEVENT_PROPERTIES"/>
        <fieldsetref name="SEARCH_LOGEVENT_LAYOUT"/>
        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_LOGEVENT_SEARCH"/>
        <fieldsetref name="ADVANCED_LOGEVENT_SEARCH_FOLLOWUP"/>
        <hidden name="key" value="form"/>

        <button name="eventSubmit_doView" label="BUTTON_SEARCH_PREVIEW"/>
        <button name="eventSubmit_doDelete" label="actionButtonDelete"/>
        <button name="eventSubmit_doCopycreate"/>
        <button name="eventSubmit_doSave" label="BUTTON_SEARCH_SAVE"/>
        <button name="eventSubmit_doCancel" label="actionButtonCancel"/>
    </form>

    <fieldset name="SEARCH_LOGEVENT_PROPERTIES" showlegend="false">
        <hidden name="funcLevelOne" restricts="funcLevelTwo,funcLevelThree,tag,logDefinitionKey"/>
        <hidden name="objectClassName" value="ibanx.logbook.LogEventIF"/>

        <hidden name="fromShiftId"/>
        <textfield name="dummyfromShiftId" label="shiftFrom" cssClass="shiftPicker" operator="equals"/>
        <hidden name="toShiftId"/>
        <textfield name="dummytoShiftId" label="shiftTill" cssClass="shiftPicker" operator="equals"/>

        <suggest name="logDefinitionKey" operator="equals" minLength="0">
            <source class="valuelist" valuelistNameRef="logdefinitions" filter="all"/>
        </suggest>

        <select name="businessObjectType.number" operator="equals" label="businessObjectType.number">
            <source class="businessobjecttypelist" valuelistNameRef="ibanx.logbook.LogEventIF"/>
        </select>

        <checkbox name="flag_highlite"/>
    </fieldset>

    <fieldset name="SEARCH_LOGEVENT_LAYOUT" showlegend="false">
        <layout values="logevent3,logevent4" label="searchLayout"/>
        <pagesize value="50"/>
        <checkbox name="searchAdvancedSwitch" discloses="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE,ADVANCED_LOGEVENT_SEARCH,ADVANCED_LOGEVENT_SEARCH_FOLLOWUP"/>
    </fieldset>

    <fieldset name="ADVANCED_LOGEVENT_SEARCH" label="searchCriteria">
        <textfield name="number" cssClass="uppercase"/>

        <select name="orgContext" operator="match" label="team">
            <source class="teamlist"/>
        </select>
        <select name="category" operator="match" label="category">
            <source class="valuelist" valuelistNameRef="eventCategory" filter="all"/>
        </select>
        <textfield name="title" label="logeventTitle"/>
        <select name="downtime" operator="equals" label="downtime">
            <source class="valuelist" valuelistNameRef="downtimeType" display="description" filter="all"/>
        </select>
        <suggest name="createdBy" operator="freetext">
            <source class="userlist"/>
        </suggest>
    </fieldset>

    <fieldset name="ADVANCED_LOGEVENT_SEARCH_FOLLOWUP" label="followUp">
        <textfield name="followUp_text*" operator="freetext" label="followUp_text"/>
        <select name="followUp" operator="equals" label="followUp">
            <source class="valuelist" valuelistNameRef="followUp" display="description" filter="all"/>
        </select>
        <select name="followUp_extra*" operator="equals" label="followUp_extra">
            <source class="inline">
                <option value="true"/>
                <option value="false"/>
            </source>
        </select>
    </fieldset>
</forms>