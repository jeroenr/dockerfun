        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:RESULT_PROPERTIES"/>

        <hidden name="objectClassName" value="ibanx.loto.IsolationListIF"/>
        <hidden name="key" value="form"/>

        <button name="eventSubmit_doView" label="BUTTON_SEARCH_PREVIEW"/>
        <button name="eventSubmit_doDelete" label="actionButtonDelete"/>
        <button name="eventSubmit_doCopycreate"/>
        <button name="eventSubmit_doSave" label="BUTTON_SEARCH_SAVE"/>
        <button name="eventSubmit_doCancel" label="actionButtonCancel"/>

        <whitelist names="searchResultList name description objectKey privateSpec queryspec"/>
    </form>

    <form style="search" name="SEARCH:SIMPLE:LOTOLIST" generatetag="false">
        <hidden name="tab" value="1"/>

        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <hidden name="objectClassName" value="ibanx.loto.IsolationListIF"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:PROPERTIES"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:RESULT_PROPERTIES"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
        <button type="reset" name="BUTTON_RESET"/>
    </form>

    <form style="search" name="SEARCH:SIMPLE:LOTOLIST:LINKING" generatetag="false">
        <hidden name="tab" value="1"/>

        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <hidden name="objectClassName" value="ibanx.loto.IsolationListIF"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:PROPERTIES:LINKING"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:RESULT_PROPERTIES"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
        <button type="reset" name="BUTTON_RESET"/>
    </form>

    <form style="search" name="SEARCH:LOTOLIST" generatetag="false">
        <hidden name="tab" value="2"/>

        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <hidden name="objectClassName" value="ibanx.loto.IsolationListIF"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:PROPERTIES"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:SIGN"/>

        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:RESULT_PROPERTIES"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
        <button type="reset" name="BUTTON_RESET"/>
    </form>
    <form style="search" name="SEARCH:LOTOLIST:LINKING" generatetag="false">
        <hidden name="tab" value="2"/>

        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <hidden name="objectClassName" value="ibanx.loto.IsolationListIF"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:PROPERTIES:LINKING"/>
        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:SIGN"/>

        <fieldsetref name="ADVANCED_LOTOLIST_SEARCH:RESULT_PROPERTIES"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
        <button type="reset" name="BUTTON_RESET"/>
    </form>

    <fieldset name="ADVANCED_LOTOLIST_SEARCH:PROPERTIES" label="searchCriteria">
        <multiselect name="businessObjectType.number" operator="equals" label="businessObjectType.number">
            <source class="businessobjecttypelist" valuelistNameRef="ibanx.loto.IsolationListIF"/>
        </multiselect>
        <select type="radio" name="isTemplate" operator="equals" label="isTemplate">
            <source class="valuelist" valuelistNameRef="boolean"/>
        </select>
        <textfield name="number" operator="freetext" label="number"/>

        <daterange name="plannedIsolationDate"/>
        <daterange name="plannedDeisolationDate"/>

        <multiselect name="lifecycleState.name" operator="match" type="list">
            <source class="lifecyclestatelist" valuelistNameRef="DEFAULT_LOTO_LIST_PROCESS,TEMPLATE_LOTO_LIST_PROCESS" display="showprocessname"/>
        </multiselect>

    </fieldset>

    <fieldset name="ADVANCED_LOTOLIST_SEARCH:PROPERTIES:LINKING" label="searchCriteria">
        <hidden name="businessObjectType.number"/>
        <hidden name="isTemplate"/>

        <textfield name="number" operator="freetext" label="number"/>

        <daterange name="plannedIsolationDate"/>
        <daterange name="plannedDeisolationDate"/>

        <multiselect name="lifecycleState.name" operator="match" type="list">
            <source class="lifecyclestatelist" valuelistNameRef="DEFAULT_LOTO_LIST_PROCESS,TEMPLATE_LOTO_LIST_PROCESS" display="showprocessname"/>
        </multiselect>

    </fieldset>

    <fieldset name="ADVANCED_LOTOLIST_SEARCH:SIGN" label="searchSign">
        <textfield name="signature.name" label="name"/>
        <!-- between.signature.signdate  -->
        <daterange name="signature.signDate" label="signDate"/>
    </fieldset>

    <fieldset name="ADVANCED_LOTOLIST_SEARCH:RESULT_PROPERTIES" label="searchCriteriaOther">
        <orderby values="number,funcLevelTwo,funcLevelThree,tag" label="searchOrderBy"/>
        <layout values="isolationLists,isolationListsActive" label="searchLayout"/>
    </fieldset>


