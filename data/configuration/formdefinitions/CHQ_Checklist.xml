<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>
    <form name="CHECKLIST:NEW">
        <!-- title should not exceed 50 chars because it will also use as the number for the
                         change analysis business objecttype -->
        <textfield name="checklistName" required="true" maxLength="50" label="name" width="wide"/>
        <hidden name="changeBusinessObjectType" value="CHANGE"/>
        <fieldsetref name="CHECKLIST:DATA"/>

        <button type="submit" label="actionButtonCreate" name="eventSubmit_doCreate"/>
        <button type="submit" label="backToList" name="eventSubmit_doViewChecklists"/>
    </form>
    <form name="CHECKLIST:EDIT">
        <hidden name="checklistName"/>
        <fieldsetref name="CHECKLIST:DATA"/>

        <button type="submit" label="actionButtonSave" name="eventSubmit_doSavechecklistproperties"/>
        <button type="submit" label="backToList" name="eventSubmit_doViewChecklists"/>
    </form>

    <fieldset name="CHECKLIST:DATA" showlegend="false">
        <textfield name="title" required="true" maxLength="75" width="wide"/>
        <textarea name="description" required="true" maxLength="250" width="wide"/>
        <select type="radio" required="true" name="optional" width="wide">
            <source class="inline">
                <option value="true"/>
                <option value="false"/>
            </source>
        </select>

        <select name="releaseInStep" required="true">
            <source class="happyflowstatenamelist" valuelistNameRef="CHANGE_PROCESS" display="showphase"/>
        </select>
        <select name="finishInStep" required="true">
            <source class="happyflowstatenamelist" valuelistNameRef="CHANGE_PROCESS" display="showphase"/>
        </select>

        <multiselect name="flowId" mode="edit" required="true">
            <source class="inline" translationPattern="moctype.%s">
                <option value="small"/>
                <option value="small-with-gatekeeping"/>
                <option value="medium"/>
                <option value="medium-with-gatekeeping"/>
                <option value="medium-with-studies"/>
                <option value="large"/>
            </source>
        </multiselect>
    </fieldset>

</forms>
