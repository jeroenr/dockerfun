<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms PUBLIC "-//iBanx//Dynamic Forms 1.0//-" "http://www.ibanx-hse.com/dtds/DynamicForms.dtd">
<forms>

    <form style="search" name="SEARCH:TASK" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <fieldsetref name="SEARCH_TASK_PROPERTIES"/>
        <fieldsetref name="SEARCH_TASK_LAYOUT"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_TASK_SEARCH"/>

        <button type="submit" name="eventSubmit_doSearch" label="BUTTON_SEARCH"/>
    </form>
    <form style="search" name="EDIT_STORED_QUERY:TASK" generatetag="false">
        <fieldsetref name="HIDDEN:AND:WHITELISTING:PROPERTIES"/>
        <fieldsetref name="SEARCH_TASK_PROPERTIES"/>
        <fieldsetref name="SEARCH_TASK_LAYOUT"/>

        <fieldsetref name="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE"/>
        <fieldsetref name="ADVANCED_TASK_SEARCH"/>
        <hidden name="key" value="form"/>

        <button name="eventSubmit_doView" label="BUTTON_SEARCH_PREVIEW"/>
        <button name="eventSubmit_doDelete" label="actionButtonDelete"/>
        <button name="eventSubmit_doCopycreate"/>
        <button name="eventSubmit_doSave" label="BUTTON_SEARCH_SAVE"/>
        <button name="eventSubmit_doCancel" label="actionButtonCancel"/>
    </form>
    <fieldset name="SEARCH_TASK_PROPERTIES" showlegend="false">
        <hidden name="funcLevelOne" restricts="funcLevelTwo,funcLevelThree,tag"/>
        <hidden name="objectClassName" value="ibanx.task.TaskIF"/>

        <hidden name="fromShiftId"/>
        <textfield name="dummyfromShiftId" label="shiftFrom" cssClass="shiftPicker" operator="equals"/>
        <hidden name="toShiftId"/>
        <textfield name="dummytoShiftId" label="shiftTill" cssClass="shiftPicker" operator="equals"/>

        <select name="businessObjectType.number" operator="equals" label="businessObjectType.number">
            <source class="businessobjecttypelist" valuelistNameRef="ibanx.task.TaskIF"/>
        </select>

        <select name="lifecycleState.name" operator="equals">
            <source class="lifecyclestatelist" valuelistNameRef="EVALUATE_PERMIT_TASK_PROC,DEFAULT_TASK_PROC" valueAttribute="name"/>
        </select>

        <suggest name="assignee" operator="equals">
            <source class="userlist"/>
        </suggest>

        <checkbox name="flag_highlite"/>
    </fieldset>
    <fieldset name="SEARCH_TASK_LAYOUT" showlegend="false">
        <layout values="STDTASK,STDTASKSHIFT" label="searchLayout"/>
        <pagesize/>
        <checkbox name="searchAdvancedSwitch" discloses="GENERIC_SEARCH_SECTION_PBS_NO_FUNCLEVEL_ONE,ADVANCED_TASK_SEARCH"/>
    </fieldset>

    <fieldset name="ADVANCED_TASK_SEARCH" label="searchCriteria">
        <textfield name="number" cssClass="uppercase"/>

        <textfield name="title" label="taskTitle"/>

        <daterange name="dueDate" label="dueDate"/>
        <daterange name="executionDate" label="executionDate"/>

        <select name="priority">
            <source class="valuelist" valuelistNameRef="priorities" display="description" filter="all"/>
        </select>

    </fieldset>

</forms>